<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeMerchantFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Hello, Merchant"
                android:textSize="30dp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nasi Goreng UMN"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/box"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_account_balance_wallet_120" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="19dp"
                        android:text="Total Pendapatan Hari Ini"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="35dp"
                        android:text="Rp. 2.000.000" />
                </LinearLayout>
            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageOrder"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/rounded_corner"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_assignment_50_blue" />

                    <TextView
                        android:id="@+id/TextView5"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:text="Order"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageMenu"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/rounded_corner"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_dining_50" />

                    <TextView
                        android:id="@+id/TextView6"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:text="Menu"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageTransaction"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/rounded_corner"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_currency_exchange_50" />

                    <TextView
                        android:id="@+id/TextView7"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:text="View Transaction"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageCritics"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/rounded_corner"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_comment_50" />

                    <TextView
                        android:id="@+id/TextView8"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:text="Critics"
                        android:gravity="center"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Incoming Order"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jumlahOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="26dp"
                    android:textStyle="bold" />

            </LinearLayout>
    </ScrollView>
</FrameLayout>